<?xml version="1.0" encoding="utf-8"?>
<com.groupc.officelocator.ZoomLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/UniversalBackground"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.groupc.officelocator.campus"
    android:id="@+id/zoom">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/campusorange"
        android:cropToPadding="true"
        android:paddingTop="13dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecttxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/searchbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/tw1"
        android:layout_width="110dip"
        android:layout_height="90dip"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/campus"
        android:layout_alignRight="@+id/campus"
        android:layout_alignTop="@+id/mh1"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dip"
        android:layout_height="55dip"
        app:srcCompat="@drawable/search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/mh1"
        android:background="@android:color/transparent"
        android:layout_width="60dip"
        android:layout_height="230dip"
        android:layout_below="@+id/campus"
        android:layout_marginTop="56dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:text="@string/campus_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>
</com.groupc.officelocator.ZoomLayout>